# Edge AI Proxy Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Proxy API Key (for admin endpoints)
PROXY_API_KEY=your-secure-api-key-here

# Cache Configuration
CACHE_MAX_SIZE=2GB
CACHE_DEFAULT_TTL=300
CACHE_PERSONALIZATION_TTL=60

# AI Model Configuration
MODEL_CACHE_PATH=./models
INFERENCE_TIMEOUT=100
FALLBACK_TO_CACHE=true
PERSONALIZE_ANONYMOUS=false

# Tenant API Keys (for demo)
DEMO_STORE_API_KEY=demo-api-key
SHOPIFY_API_KEY=your-shopify-api-key
WOOCOMMERCE_KEY=your-woocommerce-key

# Monitoring
METRICS_RETENTION_PERIOD=86400000
METRICS_FLUSH_INTERVAL=10000

# Circuit Breaker
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RESET_TIMEOUT=30000

# Rate Limiting (requests per tenant)
RATE_LIMIT_PER_SECOND=100
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000